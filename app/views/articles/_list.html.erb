<div class="card-list-container py-5">
  <% articles.each do |article| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-2">
            <%= attachment_image_tag article.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <span><i class="fas fa-user"></i><%= article.user.name %></span>
            <!--＿＿＿＿＿＿＿＿＿＿＿＿フォロー機能解決する！！！！！！！＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿-->
            <span>
              <%= render 'relationships/follow_form', user: article.user %>
            </span>
          </div>
        </div>
      </div>
      <%= link_to article_path(article.id) do %>
        <%= attachment_image_tag article, :image, class: "card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <span>
              <%= link_to(article_path(article.id), class: "text-dark") do %>
                <i class="fa fa-comment"></i> <%= article.post_comments.count %>
              <% end %>
            </span>
    <!--＿＿＿＿＿＿＿＿＿非同期がうまくいかない＿＿＿＿＿＿＿＿＿-->
            <!--<span>-->
            <!--  <div id="likes_buttons_<%#= article.id %>">-->
            <!--    <%#= render partial: 'likes/like', locals: { article: article} %>-->
            <!--  </div>-->
            <!--</span>-->
            <% if article.liked_by?(current_user) %>
            <span>
              <%= link_to(article_likes_path(article), class:"text-dark", method: :delete) do %>
                <i class="fa fa-heart" aria-hidden="true"></i> <%= article.likes.count %>
              <% end %>
            </span>
            <% else %>
            <span>
              <%= link_to(article_likes_path(article), class:"text-dark", method: :post) do %>
                <i class="fa fa-heart" aria-hidden="true"></i> <%= article.likes.count %>
              <% end %>
            </span>
            <% end %>

            <% if article.user == current_user %>
              <%= link_to "削除", article_path(article), class:"text-dark", method: :delete %>
            <% end %>
            <p class="card-text">
              <strong><%= article.user.name %></strong>  <%= article.caption %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%#= paginate articles %>
</div>
