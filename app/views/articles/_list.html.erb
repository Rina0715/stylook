<div class="card-list-container py-5">
  <% articles.each do |article| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag article.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <span><i class="fas fa-user"></i><%= article.user.name %> ｜ </span>
          </div>
        </div>
      </div>
      <%= link_to article_path(article.id) do %>
        <%= attachment_image_tag article, :image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <span>
              <td><%= link_to "コメントする", article_path(article.id), class:"text-dark" %></td>
              <td>:<%= article.post_comments.count %>件</td>
            </span>
            <p class="card-text"><%= article.caption %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%#= paginate articles %>
</div>
