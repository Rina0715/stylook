<% if !Favorite.exists?(user_id: current_user.id, article_id: article.id) %>
  <%= link_to article_favorites_path(article), method: :post, remote: true, class:"text-dark" do %>
    <i class="fas fa-paperclip fa-lg"></i>  <%= article.favorites.count %>
  <% end %>
<% else %>
  <%= link_to article_favorite_path(article_id: article.id, id: article.favorites[0].id), method: :delete, remote: true, class:"text-dark" do %>
    <i class="fas fa-paperclip fa-lg"></i>  <%= article.favorites.count %>
  <% end %>
<% end %>