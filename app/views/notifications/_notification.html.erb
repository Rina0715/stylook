<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class='container px-5 px-sm-0'>
<div class='col-md-6.mx-auto'></div>
  <div class='form-inline'></div>
    <span>
      <%= link_to user_path(visitor) do %>
        <%= attachment_image_tag notification.visitor, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
      <% end%>
      <strong>
        <%= visitor.name %>
      </strong>
        <%= 'さんが' %>
    </span>
    <span>
      <% case notification.action %>
      <% when 'following' then %>
        <%= "あなたをフォローしました" %>
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.article, style: "font-weight: bold;" %>
        <%= "にいいねしました" %>
      <% when 'comment' then %>
        <% if notification.article.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.article, style: "font-weight: bold;" %>
        <% else %>
          <%= link_to article_path(notification.article) do %>
            <%= attachment_image_tag user(notification.article.user), :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          <% end %>
          <strong>
            <%= notification.article.user.name + 'さんの投稿' %>
          </strong>
            <%= "にコメントしました" %>
        <% end %>
      <% end %>
    </span>
      <p>
        <div class='text-muted.mb-0'>
          <%= PostComment.find_by(id: notification.post_comment_id)&.post_comment %>
        </div>
      </p>
      <div class='small.text-muted.text-right'>
        <%= time_ago_in_words(notification.created_at).upcase %>
      </div>
      <hr>
  </div>
</div>
</div>