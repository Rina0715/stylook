  <span>
    <% if article.liked_by?(current_user) %>
      <%= link_to(article_likes_path(article), class: "text-dark", method: :delete, remote: true) do %>
        <i class="fa fa-heart fa-lg" aria-hidden="true"></i> <%= article.likes.count %>
      <% end %>
    <% else %>
      <%= link_to(article_likes_path(article), class: "text-dark", method: :post, remote: true) do %>
        <i class="fa fa-heart fa-lg" aria-hidden="true"></i> <%= article.likes.count %>
      <% end %>
    <% end %>
  </span>