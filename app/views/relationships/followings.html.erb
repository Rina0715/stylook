<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h4>フォロー中</h4>
      <% if @users.exists? %>
        <table>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"rounded-circle"; %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>