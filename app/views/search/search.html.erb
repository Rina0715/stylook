<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
      <h2>Users search for '<%= @value %>'</h2>
      <% @datas.each do |user| %>
        <tbody>
          <tr>
            <th>
              <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
            </th>
            <th>
              <%= link_to user_path(user) do %>
                <%= user.name %>
              <% end %>
            </th>
          </tr>
        </tbody>
      <% end %>
      <% elsif @model == "genre" %>
      <h2>Genres search for '<%= @value %>'</h2>
      <% @datas.each do |genre| %>
        <tbody>
          <tr>
            <th>
              <%= render 'articles/list', articles: @articles %>
              <%#= attachment_image_tag genre, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
              <%#= link_to article_path(article.id) do %>
                <%#= attachment_image_tag article, :image, size:'300x300', class:"card-img-top"; %>
              <%# end %>
            </th>
          </tr>
        </tbody>
      <% end %>
      <% elsif @model == "tag" %>
      <h2>Tags search for '<%= @value %>'</h2>
      <% @datas.each do |tag| %>
        <tbody>
          <tr>
            <th>
              <%= attachment_image_tag tag, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
              <%#= link_to article_path(article.id) do %>
                <%#= attachment_image_tag article, :image, size:'300x300', class:"card-img-top"; %>
              <%# end %>
            </th>
          </tr>
        </tbody>
      <% end %>
    <% end %>
  </div>
</div>