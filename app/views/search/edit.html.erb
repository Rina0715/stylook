<div class='container px-4'>
  <div class='search'>
    <div class='row'>
      <div class='col-md-8'>
        <% if user_signed_in? %>
          <%= form_with url:search_path, method: :get, local: true do |f| %>
            <%= f.text_field 'search[value]', size: "26x4" %>
            <%= f.select 'search[how]', options_for_select({ "部分一致" => "partical", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "match" }) %>
            <%= f.submit :"検索" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-5 mx-1'>
        <table class="table table-bordered genre-table">
          <thead>
            <tr>
              <th>ジャンル別</th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre.name, filter_path('search[genre]': genre.id) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>